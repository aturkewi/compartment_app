<%=form_for(:session, url: login_path) do |f|%>
    <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email, placeholder: "email address"  %><br>
    </div>
    <div class="field">
        <%= f.label :first_name %><br>
        <%= f.text_field :first_name, placeholder: "first_name"  %><br>
    </div>
    <div class="field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name, placeholder: "last name"  %><br>
    </div>
    <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password, placeholder: "password" %><br>
    </div>
    <div class="field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, placeholder: "password confirmation"  %><br>
    </div>
    <hr>
    <div class="actions">
        <%= f.submit "Sign In", class: 'btn btn-default'%>
    </div>
<% end %>